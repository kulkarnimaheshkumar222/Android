<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#EAF0F1">

   <Button
       android:id="@+id/errorBtnId"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Error Button"
       android:background="#BA2F16"
       android:textColor="#FFFFFF"
       android:textSize="18sp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginHorizontal="10dp"
       android:onClick="showToast"/>

   <Button
       android:id="@+id/successBtnId"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Success Button"
       android:background="#26AE60"
       android:textColor="#FFFFFF"
       android:textSize="18sp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginHorizontal="10dp"
       android:onClick="showToast"/>

   <Button
       android:id="@+id/infoBtnId"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Info Button"
       android:background="#0A79DF"
       android:textColor="#FFFFFF"
       android:textSize="18sp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginHorizontal="10dp"
       android:onClick="showToast"/>

   <Button
       android:id="@+id/warningBtnId"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Warning Button"
       android:background="#E6425E"
       android:textColor="#FFFFFF"
       android:textSize="18sp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginHorizontal="10dp"
       android:onClick="showToast"/>

   <Button
       android:id="@+id/imageBtnId"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Image Button"
       android:background="#51E1ED"
       android:textColor="#FFFFFF"
       android:textSize="18sp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:layout_marginHorizontal="10dp"
       android:onClick="showToast"/>


</LinearLayout>